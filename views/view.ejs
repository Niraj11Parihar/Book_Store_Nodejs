<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookStore</title>
    <!-- FontAwesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="../assets/css/style_views.css" />
  </head>
  <body>
    <div id="header">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">BookStore</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">View</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/form">Form</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>

    <div class="container mt-5">
      <div class="row">
        <% data.map((user) => { %>
          <div class="col-md-4">
            <div class="book mb-4 shadow-sm">
              <div class="bookpic" >
                <img src="<%= user.bookimage %>" class="card-img-top" alt="<%= user.bookname %>">
              </div>
              <div class="bookinfo p-2">
                <h5 class="title text-center pt-4 fw-bolder " ><%= user.bookname %></h5>
                <p class="card-text mt-5 "><strong>Published on:</strong> <%= new Date(user.date).toLocaleDateString('en-IN') %></p>
                <p class="card-text my-4 "><strong>Price:</strong> $<%= user.price %></p>
                <p class="author "><strong>Author:</strong> <%= user.authorname %></p>
                <ul class="controls">
                  <li>
                    <a href="<%= user.link%>" class="viewbtn text-warning"><i class="fa-solid fa-cart-shopping" style="font-size: 20px;"></i></a>
                  </li>
                  <li>
                    <a href="/editData/<%= user._id %>" class="editbtn text-success"><i class="far fa-edit icon" style="font-size: 20px;"></i></a>
                  </li>
                  <li>
                    <a href="/deleteData/<%= user._id %>" class="deletebtn text-danger "><i class="fas fa-trash deletesvg" style="font-size: 20px;"></i></a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        <% }) %>
      </div>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
