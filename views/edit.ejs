<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- FontAwesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <!-- bootstrap  -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- css  -->
    <link rel="stylesheet" href="../assets/css/style_form.css" />
  </head>
  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
          <div class="card shadow-lg">
            <div class="card-header text-center text-white">
              <h2>Update Book Details</h2>
            </div>
            <div class="card-body">
              <form action="/insertData" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="bookname" class="form-label uppercase"
                    >Book Name</label
                  >
                  <input type="hidden" name="id" value="<%= user.id %>">
                  <input
                    type="text"
                    class="form-control"
                    value="<%= user.bookname %>"
                    name="bookname"
                    placeholder="Enter book name"
                  />
                </div>
                <div class="mb-3">
                  <label for="authorName" class="form-label">Author Name</label>
                  <input
                    type="text"
                    class="form-control"
                    value="<%= user.authorname %>"
                    name="authorname"
                    placeholder="Enter author name"
                  />
                </div>
                <div class="mb-3">
                  <label for="publishDate" class="form-label"
                    >Publishing Date</label
                  >
                  <input
                    type="date"
                    class="form-control"
                    id="publishDate"
                    value="<%=  new Date(user.date).toISOString().split('T')[0] %>"
                    name="date"
                  />
                </div>
                <div class="mb-3">
                  <label for="price" class="form-label">Price</label>
                  <input
                    type="number"
                    class="form-control"
                    value="<%= user.price %>"
                    name="price"
                    placeholder="Enter price"
                  />
                </div>
                <div class="mb-3">
                    <label for="bookImage" class="form-label">Book Image</label>
                   <div style="display: flex;justify-content: center;">
                    <input type="file" class="form-control" name="bookimage" value="../<%= user.bookimage %>" style="width: 100%;" />
                    <img src="../<%= user.bookimage %>" alt="" height="100px" style="width: 20%;" >
                   </div>
                  </div>
                <div class="mb-3">
                  <label for="link" class="form-label">List</label>
                  <input
                    type="url"
                    class="form-control"
                    value="<%= user.link %>"
                    name="link"
                    placeholder="product link"
                  />
                </div>
                <button type="submit" class="btn btn-success w-100">
                  Submit
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
